---
const { prevURL, nextURL } = Astro.props;
import {Icon} from "astro-icon/components"
---

<div
  class={`mt-[15px]  flex items-center ${prevURL != undefined ? "justify-between" : "justify-end"} w-full`}
>
  {
    prevURL != undefined ? (
      <a class="btn shadow-lg" href={prevURL}>
	  <Icon size={30} name="ph:caret-left"/>
      </a>
    ) : null
  }
  <a class="btn shadow-lg" href={nextURL}>
	  <Icon size={30} name="ph:caret-right"/>
  </a>
</div>
